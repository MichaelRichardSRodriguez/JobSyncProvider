@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<!-- Optional Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<header class="text-center mt-5">
    <!-- Title with enhanced styling -->
    <h1 class="text-danger display-4">
        <i class="bi bi-lock-fill"></i> @ViewData["Title"]
    </h1>

    <!-- Subtitle with more emphasis -->
    <p class="text-danger lead">
        You do not have access to this resource. Please contact your administrator if you believe this is a mistake.
    </p>

    <!-- Action Button to go back to Home -->
    <a href="/" class="btn btn-primary btn-lg mt-4">Go Back to Home</a>
</header>

