@model IEnumerable<JobSyncProvider.ViewModels.UserVM>

@{
	ViewData["Title"] = "User Management";
}

<div class="container">
	<div class="card p-3 rounded border shadow">

		<h1>User Management</h1>

		<div class="d-flex justify-content-between align-items-center">

			<p></p>

			<div class="d-flex justify-content-end align-items-center">
				<!-- Filter dropdown for USER STATUS -->
				<label for="statusFilter" class="mr-5">Filter Status:</label>
				<select id="statusFilter" class="form-select d-inline-block" style="width:195px; cursor:pointer;">
					<option value="All">All</option>
					<option value="Valid">Valid</option>
					<option value="Invalid">Invalid</option>
				</select>

				<!-- Filter dropdown for USER ROLE -->
				<label for="roleFilter" class="mr-5">Filter Role:</label>
				<select id="roleFilter" class="form-select d-inline-block" style="width:195px; cursor:pointer;">
					<option value="All">All</option>
					<option value="JobSeeker">JobSeeker</option>
					<option value="Employer">Employer</option>
					<option value="Admin">Admin</option>
				</select>
			</div>

		</div>

		<table id="tblData" class="table table-hover">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.FullName)
					</th>
 					<th>
						@Html.DisplayNameFor(model => model.Email)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Role)
					</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<!-- Using Datatable / jQuery -->
			</tbody>
		</table>
	</div>
</div>

@section Scripts {

	<script src="~/js/usermanagement.js"></script>

}
