@model IEnumerable<JobSyncProvider.Models.Category>

@{
	ViewData["Title"] = "Category List";
}

<div class="container col-lg-8 col-md-10 col-12">
	<div class="card p-3 rounded border shadow">

		<h1>Category List</h1>

		<div class="d-flex justify-content-between align-items-center">
			<!-- Create Button -->
			<p class="mb-0">
				<a class="btn btn-primary d-inline-block" asp-action="Create">Create New</a>
			</p>

			<!-- Filter dropdown for status -->
			<div>
				<label for="statusFilter" class="mr-5">Filter Status:</label>
				<select id="statusFilter" class="form-select d-inline-block" style="width:195px; cursor:pointer;">
					<option value="All">All</option>
					<option value="Valid">Valid</option>
					<option value="Invalid">Invalid</option>
				</select>
			</div>

		</div>

		<table id="tblData" class="table table-hover">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Status)
					</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<!-- Using Datatable / jQuery -->

			</tbody>
		</table>
	</div>
</div>

@section Scripts {

	<script src="~/js/category.js"></script>

}
